pipeline {
agent any
stages {
    stage (build) {
        steps {
            echo 'build step'
          }
        }
     stage (deploy) {
         steps {
             echo 'deploy step'		 
        }
    }
    stage (testing) {
        steps {
            echo 'testing step succeeded'
            bat  'ipconfig/all'
        }
    } 
    
}
    post {
        always {
            echo 'always to be executed once job completed'
        }
        failure {
            echo 'only if job fails'
        }
        success {
            echo 'only if job succeeded'
        }
    }
}
